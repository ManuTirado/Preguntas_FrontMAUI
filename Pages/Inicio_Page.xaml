<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontMaui.Pages.Inicio_Page"
             Title="Inicio_Page">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="AliceBlue"
                          Offset="0.1" />
            <GradientStop Color="BlueViolet"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <AbsoluteLayout>
        <Image AbsoluteLayout.LayoutBounds="0.5,0.1,0.5,0.2"
               AbsoluteLayout.LayoutFlags="All"
                Source="logo.png"/>

        <VerticalStackLayout AbsoluteLayout.LayoutBounds="0.5,0.5,0.2,0.1"
                AbsoluteLayout.LayoutFlags="All"
                             Spacing="20">
            <Button Text="Unirse" FontAttributes="Bold" FontSize="Large"  Clicked="onBtnUnirse"/>
            <Button Text="Crear" FontAttributes="Bold" FontSize="Large" Clicked="onBtnCrear"/>
        </VerticalStackLayout>
    </AbsoluteLayout>
</ContentPage>